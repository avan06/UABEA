<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="90"
		Width="300" MinHeight="90" MaxHeight="300" SizeToContent="Height"
		x:Class="UABEAvalonia.MessageBox"
		Title="Message Box">
	<Grid Margin="5,0,5,5" RowDefinitions="24,*,30">
		<Label Grid.Row="0" Name="titleLbl">Title</Label>
		<TextBox IsReadOnly="True" TextWrapping="Wrap" Grid.Row="1" Name="msgTextBox" MinHeight="24" MaxHeight="300">
			Message
		</TextBox>
		<StackPanel Margin="0,5,0,0" Grid.Row="2" Orientation="Horizontal" Spacing="10" FlowDirection="RightToLeft" Name="stackPanel">
			<Button MinWidth="70" Name="btn3">Cancel</Button>
			<Button MinWidth="70" Name="btn2">No</Button>
			<Button MinWidth="70" Name="btn1">Yes</Button>
		</StackPanel>
	</Grid>
</Window>
